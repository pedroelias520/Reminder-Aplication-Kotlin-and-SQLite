<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:background="@drawable/background_color"
                                                   android:layout_height="match_parent" android:id="@+id/linearLayout">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/form_box"
            android:layout_width="412dp"
            android:layout_height="550dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.995" android:id="@+id/linearLayout2" android:orientation="vertical">
        <LinearLayout
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                tools:layout_editor_absoluteX="0dp" android:layout_marginTop="32dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout3">
            <Button
                    android:layout_margin="10dp"
                    android:fontFamily="@font/ubuntu_bold"
                    android:background="@drawable/button_rounded"
                    android:layout_gravity="center"
                    android:width="50dp"
                    android:text="Nome"
                    android:layout_width="154dp"
                    android:layout_height="45dp" android:id="@+id/Nome_Button" android:textSize="20sp"
                    android:textColor="#000000"/>
            <EditText
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_white"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/NomeText" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp" tools:layout_editor_absoluteY="153dp"
                tools:layout_editor_absoluteX="16dp" android:id="@+id/linearLayout3">
            <Button
                    android:layout_margin="10dp"
                    android:fontFamily="@font/ubuntu_bold"
                    android:background="@drawable/button_rounded"
                    android:layout_gravity="center"
                    android:width="50dp"
                    android:text="Hora"
                    android:layout_width="154dp"
                    android:layout_height="45dp" android:id="@+id/button2" android:textSize="20sp"
                    android:textColor="#000000"/>
            <EditText
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_white"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/HoraText" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp" tools:layout_editor_absoluteX="0dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.06">
            <Button
                    android:layout_margin="10dp"
                    android:fontFamily="@font/ubuntu_bold"
                    android:background="@drawable/button_rounded"
                    android:layout_gravity="center"
                    android:width="50dp"
                    android:text="Descrição"
                    android:layout_width="154dp"
                    android:layout_height="45dp" android:id="@+id/button" android:textSize="20sp"
                    android:textColor="#000000"/>
            <EditText
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_white"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/DescricaoText" android:layout_weight="1"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
            android:fontFamily="@font/ubuntu_bold"
            android:text="Adicionar Lembrete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:textSize="40sp"
            app:layout_constraintVertical_bias="0.088" android:textColor="#FFFFFF"/>
    <RadioGroup
            android:layout_width="394dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toTopOf="@+id/linearLayout2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout2" app:layout_constraintVertical_bias="0.979"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.1">
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView2" android:layout_weight="1"
                android:textSize="14sp" tools:text="Defina o importância" app:fontFamily="@font/ubuntu_bold"/>
        <RadioButton
                android:fontFamily="@font/ubuntu_bold"
                android:textColor="#FFFF00"
                android:text="Pouco Importante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioButton3" android:layout_weight="1"
                android:textSize="18sp"/>
        <RadioButton
                android:fontFamily="@font/ubuntu_bold"
                android:textColor="#00FF00"
                android:text="Importante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioButton" android:layout_weight="1"
                android:textSize="18sp"/>
        <RadioButton
                android:fontFamily="@font/ubuntu_bold"
                android:textColor="#FF0000"
                android:text="Urgente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioButton2" android:layout_weight="1"
                android:textSize="18sp"/>
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>